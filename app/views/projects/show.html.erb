<div class="page-header">
  <% if notice %>
  <div class= "alert alert-success"><%= notice %></div>
  <% end %>

    <div class="pull-right">
      <% if current_user.owns_project?(@project) || user.admin? %>
        <%= link_to 'Edit', edit_project_path, class: "btn btn-info" %></td>
      <% end %>
    </div>

      <h1><%= @project.name %></h1>
    </div>

    <ol class="breadcrumb">
      <li><a href="/projects">Projects</a></li>
      <li class="active"><%= @project.name %></li>
    </ol>

<p><%= link_to "#{@project.tasks.count}#{" Tasks"}", project_tasks_path(@project) %></p>
<p><%= link_to "#{@project.memberships.count}#{" Members"}", project_memberships_path(@project) %></p>

<% if current_user.owns_project?(@project) || user.admin? %>
  <div class="well">
    <h4>Delete</h4>
    <p><%= "Deleting this project will also delete #{@project.memberships.count}
          #{" memberships, "} #{@project.tasks.count}#{" tasks"} and associated comments."%></p>
    <%= link_to 'Delete', @project, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>
