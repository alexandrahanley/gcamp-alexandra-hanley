<div class="container">
  <div class="page-header">

    <% if notice %>
    <div class= "alert alert-success"><%= notice %></div>
    <% end %>

    <div class="pull-right"><%= link_to 'New User', new_user_path, class: "btn btn-info" %>
    </div>
    <h1>Users</h1>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name  %></td>
        <td><%= mail_to user.email %></td>
        <!-- <td class ="text-right"><%= mail_to 'email', edit_user_path(user), class: "btn btn-info" %>
          <%= link_to 'Delete', user, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
        <% end %>
      </tbody>
    </table>

