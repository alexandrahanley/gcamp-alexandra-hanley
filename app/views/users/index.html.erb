<div class="container">
  <div class="page-header">

    <% if notice %>
    <div class= "alert alert-success"><%= notice %></div>
    <% end %>

    <div class="pull-right"><%= link_to 'New User', new_user_path, class: "btn btn-info" %>
    </div>
    <h1>Users</h1>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user %></td>
        <td><%= mail_to user.email %></td>
        <td class ="text-right"><%= link_to 'Edit', edit_user_path(user) %>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>
