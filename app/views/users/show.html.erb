<div class="page-header">
  <% if notice %>
  <div class= "alert alert-success"><%= notice %></div>
  <% end %>
  

  <div class="pull-right">
    <%= link_to 'Edit', edit_user_path, class: "btn btn-info" %></div>
    <h1><%= @user.full_name %></h1>

  </div>

    <dl class="dl-horizontal">
      <dt>First name</dt>
      <dd><%= @user.first_name %></dd><br>
      <dt>Last name</dt>
      <dd><%= @user.last_name %></dd><br>
      <dt>Email</dt>
      <dd><%= mail_to @user.email %></dd>
    </dl>
