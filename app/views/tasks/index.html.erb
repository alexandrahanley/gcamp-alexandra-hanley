<div class="container">
  <div class="page-header">

    <% if notice %>
    <div class= "alert alert-success"><%= notice %></div>
    <% end %>

    <div class="pull-right"><%= link_to 'New Task', new_project_task_path(@project), class: "btn btn-info" %>
    </div>
    <h1>"Tasks for <project name></h1>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Due Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @project.tasks.each do |task| %>
      <tr>
        <td><%= link_to project.task.description %></td>
        <td>"Blah"</td>
        <td class ="text-right"><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
          <%= link_to 'Delete', task, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>
