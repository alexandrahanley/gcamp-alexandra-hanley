<div class="container">
  <div class="page-header">

<div class="pull-right"><%= link_to 'New Task', new_task_path, class: "btn btn-info" %>
</div>



    <p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>
</div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>


  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, task_path(task) %></td>
        <td class ="text-right"><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
        <%= link_to 'Delete', task, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
