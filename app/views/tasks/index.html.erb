<div class="container">
  <div class="page-header">

    <% if notice %>
    <div class= "alert alert-success"><%= notice %></div>
    <% end %>

    <div class="pull-right"><%= link_to 'New Task', new_project_task_path(@project), class: "btn btn-info" %>
    </div>
    <h1><%="#{"Tasks for "}#{@project.name}"%></h1>
  </div>

  <ol class="breadcrumb">
    <li><a href="/projects">Projects</a></li>
    <li><%= link_to @project.name, project_path(@project) %></li>
    <li class="active">Tasks</li>
  </ol>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Due Date</th>
        <th>Complete</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, project_task_path(@project, task) %></td>
        <td><%= task.date %></td>
        <td><%= task.complete %></td>
        <td class ="text-right"><%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
          <%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe,
              project_task_path(@project, task), method: :delete, data:
              { confirm: "Are you sure you want to delete this?" } %></td>
          <br>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>
