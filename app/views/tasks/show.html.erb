<div class="page-header">
  <% if notice %>
  <div class= "alert alert-success"><%= notice %></div>
  <% end %>


  <div class="pull-right">
    <%= link_to "Edit", edit_project_task_path(@project, @task), class: "btn btn-info" %></div>
    <h1><%= @task.description %></h1>
  </div>


  <ol class="breadcrumb">
    <li><%= link_to @project.name, project_path(@project) %></li>
    <li><%= link_to "Tasks", project_tasks_path(@project) %></a></li>
    <li class="active"><%= @task.description %></li>
  </ol>

  <p><strong> Due on: </strong><%= @task.date %></p>

  <h3>Comments</h3>

    <% @task.comments.each do |comment| %>
      <div class="row">
        <div class="col-md-3">
          <% if comment.user_id? %>
          <p><%= link_to comment.user.full_name, user_path(comment.user_id) %></p>
          <p class="text-muted"><%= time_ago_in_words(comment.created_at) %> ago</p>
        </div>
        <% else %>
        <p><%= "Deleted User" %></p>
        <p class="text-muted"><%= time_ago_in_words(comment.created_at) %></p>
        <% end %>
          <p class="col-md-9"><%= comment.description %></p>
      </div>
      <% end %>


  <%= render 'comment' %>
