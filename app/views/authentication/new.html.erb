<div class="container">
<%= form_tag signin_path do |f| %>

<div class="col-md-4 col-md-offset-4">
  <div class="well">


    <h1> Sign in to taskr </h1>
    <br>

    <% if notice %>
      <div class="alert alert-danger">
        <%= notice %>
      </div>
    <% end %>


    <div class="form-group">
        <div class= "col-md-4">
          <%= label_tag :email %>
        </div>
        <div>
        <%= email_field_tag :email %>
      </div>
    </div>

    <div class="form-group">
      <div class= "col-md-4">
        <%= label_tag :password %>
      </div>
      <div>
        <%= password_field_tag :password %>
      </div>
    </div>

      <div class="form-group">
        <%= submit_tag "Sign In", class: "btn btn-primary" %>
      </div>

      <% end %>


        </div>
      </div>
    </div>
