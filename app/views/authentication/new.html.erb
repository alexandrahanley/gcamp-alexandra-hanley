
<%= form_tag signin_path, html: {class:"form-horizontal"} do |f| %>


<div class="col-md-4 col-md-offset-4">
  <div class="well">
    <h1> Sign in to gCamp </h1>
    <br>

    <div class="form-group">
      <label class="col-md-4">
        <%= label_tag :email %>
      </label>
      <div class="col-md-4">
        <%= email_field_tag :email, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4">
        <%= label_tag :password %>
      </label>
      <div class="col-md-4">
        <%= password_field_tag :password, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4">
        <div class="action">
          <%= submit_tag "Sign In", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
</div>
<% end %>
</div>
